<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <!-- 인터넷 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dockin"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:replace="android:label,
                       android:icon,
                       android:roundIcon,
                       android:theme,
                       android:supportsRtl,
                       android:allowBackup">

        <!-- 로그인 화면을 앱 진입점으로 (유일한 런처) -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 메인, 홈, 작업일지, 안전교육 등 기존 액티비티들 -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="false" />

        <activity
            android:name=".ui.worklog.WorkLogActivity"
            android:exported="false" />

        <activity
            android:name=".ui.worklog.WorkLogListActivity"
            android:exported="false" />

        <activity
            android:name=".ui.safety.SafetyListActivity"
            android:exported="false" />

        <!-- AR 네비/메모 화면 (Kotlin 쪽) -->
        <activity
            android:name=".ui.ar.ArNavigationActivity"
            android:exported="false" />

        <activity
            android:name=".ui.ar.ArMemoActivity"
            android:exported="false" />

        <!-- Unity ARActivity : 런처 X, Login/Home에서 명시적으로 진입 -->
        <activity
            android:name=".ARActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.chat.ChatRoomActivity"
            android:exported="false" />
        <activity
            android:name=".ui.chat.BotChatActivity"
            android:exported="false" />
    </application>

</manifest>