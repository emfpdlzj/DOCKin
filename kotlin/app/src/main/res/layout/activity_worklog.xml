<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="16dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText android:id="@+id/etTitle" android:hint="제목"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/etContent" android:hint="내용"
        android:layout_width="match_parent" android:layout_height="150dp"
        android:gravity="top" android:inputType="textMultiLine"/>

    <Button android:id="@+id/btnSave" android:text="저장(오프라인)"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>